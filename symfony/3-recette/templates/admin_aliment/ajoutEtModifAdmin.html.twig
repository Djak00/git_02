{% extends 'base.html.twig' %}

{% block title %}Modification
{% endblock %}
{% block monTitre %}
	{% if isModification %}
		Modification :
		{{aliment.nom}}
	{% else %}
		Ajout d'un aliment :
	{% endif %}
{% endblock %}

{% block body %}
	{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

	<div class="row m-2">
		<div class="col-6">
			    {% if aliment.image and isModification %}
            <img src="{{ asset('images/aliments/' ~ aliment.image) }}" alt="Image de {{ aliment.nom }}" style="width:100px;">
        {% endif %}
			<div class='mt-4'>{{form_row(form.imageFile)}}</div>
			<div>{{form_row(form.nom)}}</div>
			<div>{{form_row(form.categorie)}}</div>
		</div>
		<div class="col-6">
			{{form_widget(form)}}
		</div>
	</div>
	<input type="submit" class='btn btn-info ms-2' value="Enregistrer">
	{{form_end(form)}}
{% endblock %}

