{% extends 'base.html.twig' %}

{% block title %}continent
{% endblock %}

{% block monTitre %}Continent : {{continent.libelle}}

{% endblock %}
{% block body %}
	

	<div class="row ">
		{% for animal in continent.animaux %}
			<div class="col-6 text-center"><br>
				<div class="row">
					<div class="col-12 clod-md-6 clo-lg-2 ">
						<img src="{{asset("images/" ~ animal.nom ~ ".png")}}" alt="img" class="img-fluid">
					</div>
					<div class="col text-center">
						<a href="{{path('afficher_animal',{'id' : animal.id})}}">
							<h3>{{animal.nom}}</h3>
						</a>
						<div>
							{{animal.description}}
						</div>
						<div>
							<a href="{{path("afficher_famille",{"id" : animal.famille.id })}}" class="btn btn-info">{{animal.famille.libelle}}</a>
						</div><br>
						<div>
					<div>
								{% for continentAnimal in animal.continents %}
									{% if continentAnimal.id != continent.id %}
										<a href="{{path('afficher_continent',{'id' : continentAnimal.id})}}" class="btn btn-danger mb-2">{{continentAnimal.libelle}}</a>
									{% endif %}
								{% endfor %}
							</div>
					</div>
					</div>
				</div>
			</div>

		{% endfor %}
	</div><br>
{% endblock %}

